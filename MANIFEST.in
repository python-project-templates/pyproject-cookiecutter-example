graft pyproject-cookiecutter-example
graft pyproject_cookiecutter_example/tests
graft cpp

include CMakeLists.txt
include pyproject_cookiecutter_example/CMakeLists.txt
recursive-include pyproject_cookiecutter_example *.pyx

include LICENSE
include README.md
include CONTRIBUTING.md

include .bumpversion.cfg
include pyproject.toml
include Makefile

prune docs
prune .vscode
prune .github

# test and lint assets
prune .pytest_cache
prune .ruff_cache
prune .mypy_cache
prune _skbuild

exclude .clang-format

exclude .gitignore
exclude .gitattributes

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude .DS_Store
